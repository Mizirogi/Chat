extends layout

block content
  .wrapper
    .banner
      h1 HiChat :)
      span#status
    #historyMsg
    .controls
      .items
        input#colorStyle(type='color', placeholder='#000', title='font color')
        input#emoji(type='button', value='emoji', title='emoji')
        label.imageLable(for='sendImage')
          input(type='button', value='image')
          input#sendImage(type='file', value='image')
        input#clearBtn(type='button', value='clear', title='clear screen')
      textarea#messageInput(placeholder='enter to send')
      input#sendBtn(type='button', value='SEND')
      #emojiWrapper
  #loginWrapper
    p#info connecting to server...
    #nickWrapper
      input#nicknameInput(type='text', placeholder='nickname')
      input#loginBtn(type='button', value='OK')
  script(src='/socket.io/socket.io.js')
  script(src='/javascripts/hichat.js')
